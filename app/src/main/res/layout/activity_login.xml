<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GRID_BACKGROUND_COLOR"
    android:gravity="center"
    tools:context="com.amemusic.mymusic.LoginActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@drawable/vdivider"
        android:contextClickable="false">
        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="User ID:"
                    android:id="@+id/lbl_user_id"
                    android:layout_column="1"
                    android:textStyle="bold"
                    android:gravity="bottom|right"
                    android:textColor="@color/GRID_TEXT_COLOR" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_user_id"
                    android:hint="User Id"
                    android:layout_column="2"
                    android:minWidth="@dimen/TXT_MIN_WIDTH"
                    android:textColor="@color/USER_TEXT_COLOR"
                    android:background="@color/GRID_TEXT_COLOR"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Password:"
                    android:id="@+id/lbl_password"
                    android:layout_column="1"
                    android:textStyle="bold"
                    android:gravity="bottom|right"
                    android:textColor="@color/GRID_TEXT_COLOR" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/txt_password"
                    android:hint="Password"
                    android:layout_column="2"
                    android:minWidth="@dimen/TXT_MIN_WIDTH"
                    android:textColor="@color/USER_TEXT_COLOR"
                    android:background="@color/GRID_TEXT_COLOR"
                    android:textStyle="bold" />

            </TableRow>
        </TableLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/chk_remember_password"
            android:checked="true"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:textColor="@color/GRID_TEXT_COLOR"
            android:hint="Remember Password"
            android:textColorHint="@color/GRID_TEXT_COLOR"
            android:contextClickable="false"
            android:buttonTint="@color/GRID_TEXT_COLOR" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/btn_login"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_status"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold|italic"
            android:textColor="@color/STATUS_COLOR"
            android:layout_gravity="right"
            android:gravity="right"/>

    </LinearLayout>

</LinearLayout>